<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".Controllers.SelectFitbit">

    <Button
            android:text="Logout"
            android:layout_width="98dp"
            android:layout_height="42dp" android:id="@+id/logout"
            android:background="@drawable/pages_button_logout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/Button"/>
    <TextView
            android:text="Device to Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Welcome to VERA!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/welcome" android:layout_marginBottom="84dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.509"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="310dp"
            android:layout_height="163dp"
            android:id="@+id/fitbitSelector" android:layout_marginBottom="8dp"
            android:background="@drawable/select_fitbit_list_border"
            app:layout_constraintBottom_toTopOf="@+id/welcome" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintVertical_bias="0.147"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>