<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controllers.BadgeLogin">

    <android.support.constraint.ConstraintLayout
            android:layout_width="277dp"
            android:layout_height="478dp"
            android:background="@drawable/border"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout2">

        <Button
                android:text="@string/login"
                android:layout_width="158dp"
                android:layout_height="62dp"
                android:background="@drawable/startup_login_button"
                android:textColor="@android:color/black"
                android:id="@+id/loginButton2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginBottom="28dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                android:textSize="18sp" style="@style/Button"/>
        <ImageView
                android:layout_width="259dp"
                android:layout_height="125dp" app:srcCompat="@drawable/logo_vera_blue"
                android:id="@+id/startupLogo"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/startup_logo"/>

        <android.support.design.widget.TextInputLayout
                android:layout_width="201dp"
                android:layout_height="48dp"
                android:id="@+id/badge"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:theme="@style/TextInputLabel" android:layout_marginBottom="8dp"
                android:layout_marginTop="72dp"
                app:layout_constraintTop_toBottomOf="@+id/startupLogo">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/badge_id"/>
        </android.support.design.widget.TextInputLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>